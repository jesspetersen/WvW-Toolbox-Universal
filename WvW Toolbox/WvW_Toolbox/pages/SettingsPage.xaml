<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WvW_Toolbox.pages.SettingsPage">
  <StackLayout Orientation="Vertical">
    <TableView Intent="Settings">
      <TableRoot>
        <TableSection Title="Server">
          <ViewCell>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
              <Picker x:Name="ServerSelectPicker" Title="Server"></Picker>
            </StackLayout>
          </ViewCell>
        </TableSection>
        <TableSection>
          <ViewCell>
            <StackLayout Orientation="Vertical" >
              <Button x:Name="SaveSettingsButton" Text="Save" TextColor="White" BackgroundColor="Green" ></Button>
            </StackLayout>
          </ViewCell>
        </TableSection>
        <TableSection Title="About">
          <ViewCell>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
              <Label x:Name="AboutLabel" Text="App made by Jess Petersen" />
            </StackLayout>
          </ViewCell>
        </TableSection>
      </TableRoot>
    </TableView>
  </StackLayout>
</ContentPage>